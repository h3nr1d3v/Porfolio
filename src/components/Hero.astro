---
interface Props {
  image?: string;
  name?: string;
  description?: string;
  location?: string;
  email?: string;
  github?: string;
  phone?: string;
  cvPath?: string;
}

const {
  image = "/images/profile.png",
  name = "Henry P's",
  description = "I am a developer passionate about creating innovative and efficient solutions. With experience in Backend development, I enjoy facing new challenges and constantly learning.",
  location = "Colombia",
  email = "mp792819@gmail.com",
  github = "https://github.com/h3nr1d3v",
  phone = "+1 (000) 000-000",
  cvPath = "/cv.pdf",
} = Astro.props;
---

<section
  id="hero"
  class="min-h-[calc(100vh-4rem)] flex items-center py-16 max-w-4xl mx-auto px-6"
>
  <div class="w-full">
    <div class="flex flex-col md:flex-row items-start gap-6 mb-8">
      <div class="w-32 h-32 md:w-40 md:h-40 flex-shrink-0 mb-4 md:mb-0">
        <img
          src={image}
          alt={`${name}'s profile picture`}
          width="160"
          height="160"
          loading="eager"
          decoding="async"
          class="w-full h-full rounded-full object-cover border-4 border-light-accent dark:border-dark-accent"
        />
      </div>
      <div class="flex-1">
        <h1
          class="text-3xl sm:text-4xl md:text-5xl font-bold mb-2 text-light-accent dark:text-dark-accent"
        >
          I'm {name}
        </h1>

        <div class="mb-4">
          <img
            id="typing-svg"
            src="https://readme-typing-svg.herokuapp.com/?lines=Available+to+work;Python+Developer;Always+learning&center=true&width=380&height=45&color=022c22&background=ffffff00&vCenter=true"
            alt="Developer roles and status"
            width="380"
            height="45"
            class="block dark:hidden"
          />
          <img
            id="typing-svg-dark"
            src="https://readme-typing-svg.herokuapp.com/?lines=Backend+Developer;Passionate+about+technology;Always+learning&center=true&width=380&height=45&color=cffafe&background=00000000&vCenter=true"
            alt="Developer roles and status"
            width="380"
            height="45"
            class="hidden dark:block"
          />
        </div>

        <div class="flex flex-wrap justify-start gap-4 mb-4">
          <span
            class="flex items-center gap-2 px-4 py-2 rounded-full bg-light-secondary dark:bg-dark-secondary text-light-accent dark:text-dark-accent hover:bg-light-tertiary dark:hover:bg-dark-tertiary transition-all duration-300"
          >
            <i class="fas fa-map-marker-alt" aria-hidden="true"></i>
            <span>{location}</span>
          </span>

          <a
            href={`mailto:${email}`}
            class="flex items-center gap-2 px-4 py-2 rounded-full bg-light-secondary dark:bg-dark-secondary text-light-accent dark:text-dark-accent hover:bg-light-tertiary dark:hover:bg-dark-tertiary transition-all duration-300"
            aria-label="Send email"
          >
            <i class="fas fa-envelope" aria-hidden="true"></i>
            <span class="sr-only">Email address</span>
          </a>

          <a
            href={github}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 px-4 py-2 rounded-full bg-light-secondary dark:bg-dark-secondary text-light-accent dark:text-dark-accent hover:bg-light-tertiary dark:hover:bg-dark-tertiary transition-all duration-300"
            aria-label="GitHub profile"
          >
            <i class="fab fa-github" aria-hidden="true"></i>
            <span class="sr-only">GitHub profile</span>
          </a>
        </div>

        <div class="flex flex-wrap gap-4 items-center">
          <a
            href={`tel:${phone}`}
            class="flex items-center gap-2 px-4 py-2 rounded-full bg-light-secondary dark:bg-dark-secondary text-light-accent dark:text-dark-accent hover:bg-light-tertiary dark:hover:bg-dark-tertiary transition-all duration-300"
            aria-label="Call phone number"
          >
            <i class="fas fa-phone-alt" aria-hidden="true"></i>
            <span class="sr-only">Phone number</span>
          </a>

          <a
            href={cvPath}
            download
            class="inline-flex items-center px-4 py-2 bg-light-accent dark:bg-dark-accent text-light-primary dark:text-dark-primary rounded-full hover:bg-light-tertiary dark:hover:bg-dark-tertiary transition-all duration-300 hover:scale-105"
            aria-label="Download CV"
          >
            <i class="fas fa-download mr-2" aria-hidden="true"></i>
            Download CV
          </a>
        </div>
      </div>
    </div>

    <div class="bg-light-secondary dark:bg-dark-secondary rounded-lg p-6 mb-8">
      <p class="text-lg text-light-accent dark:text-dark-accent">
        {description}
      </p>
    </div>
  </div>
</section>
